{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 50px;
        }

        .income-box {
            max-width: 500px;
            width: 100%;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            background-color: #ffffff;
        }

        .income-box h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            color: #666;
            padding: 10px;
            width: 40%;
        }

        td {
            text-align: left;
            padding: 10px;
            color: #111;
        }

       tr + tr td, tr + tr th {
            border-top: 1px solid #eee;
        }
    </style>

    <div class="income-box">
        <a href="{{ path('budget_main') }}" style="text-decoration: none; font-size: 30px; color: #111;">←</a>
        <a href="{{ path('transaction_edit', { id: transaction.sourceId, type: transaction.sourceTable }) }}" style="float: right; font-size: 16px;">Edit</a>

        <h1>Income</h1>
        <table>
            <tbody>
            <tr>
                <th>Amount</th>
                <td>{{ income.amount }} €</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ income.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ income.category }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ income.date|date('Y-m-d') }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
