{% extends 'base.html.twig' %}

{% block body %}
    <h1> Budget App </h1>
    <h2>Recent Transactions</h2>
    <table border="1" cellspacing="0" cellpadding="8">
        <thead>
        <tr>
            <th>#</th>
            <th>Type</th>
            <th>Category</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        {% for transaction in recentTransactions %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>
                    {% if transaction.Maintype == 'income' %}
                        ➕
                    {% elseif transaction.Maintype == 'expense' %}
                        ➖
                    {% else %}
                        ❔
                    {% endif %}
                </td>
                <td>{{ transaction.description }}</td>
                <td>{{ transaction.amount }} €</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No transactions yet.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
