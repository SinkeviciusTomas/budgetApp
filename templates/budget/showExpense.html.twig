{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 50px;
        }

        .expense-box {
            max-width: 500px;
            width: 100%;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            background-color: #ffffff;
        }

        .expense-box h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            color: #666;
            padding: 10px 0;
            width: 35%;
        }

        td {
            padding: 10px 0;
            color: #111;
        }

        tr + tr td, tr + tr th {
            border-top: 1px solid #eee;
        }
    </style>

    <div class="expense-box">
        <h1>Expense</h1>
        <table>
            <tbody>
            <tr>
                <th>Amount</th>
                <td>{{ expense.amount }} â‚¬</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ expense.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ expense.category }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ expense.date|date('Y-m-d') }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
