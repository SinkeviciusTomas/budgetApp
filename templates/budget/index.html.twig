{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-50 font-sans grid grid-cols-3 grid-rows-2 gap-6 p-8">

        <!-- Block 1 Generate report block-->
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6 flex items-center justify-center">
            <span class="text-gray-500">REPORT</span>
        </div>

        <!-- Block 2 Input form-->
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6 flex flex-col justify-center">
            <h2 class="text-xl font-semibold text-center text-gray-800 mb-6">Add Transaction</h2>

            {{ form_start(form, { attr: { class: 'space-y-4', novalidate: 'novalidate' } }) }}

            <div>
                {{ form_label(form.mainType, null, { label_attr: { class: 'block font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.mainType, { attr: { class: 'w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-indigo-200' } }) }}
                <div class="text-red-600 text-sm mt-1">
                    {{ form_errors(form.mainType) }}
                </div>
            </div>

            <div>
                {{ form_label(form.category, null, { label_attr: { class: 'block font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.category, { attr: { class: 'w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-indigo-200' } }) }}
                <div class="text-red-600 text-sm mt-1">
                    {{ form_errors(form.category) }}
                </div>
            </div>

            <div>
                {{ form_label(form.amount, null, { label_attr: { class: 'block font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.amount, { attr: { class: 'w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-indigo-200' } }) }}
                <div class="text-red-600 text-sm mt-1">
                    {{ form_errors(form.amount) }}
                </div>
            </div>

            <div>
                {{ form_label(form.description, null, { label_attr: { class: 'block font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.description, { attr: { class: 'w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-indigo-200' } }) }}
                <div class="text-red-600 text-sm mt-1">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div>
                {{ form_label(form.date, null, { label_attr: { class: 'block font-medium text-gray-700 mb-1' } }) }}
                {{ form_widget(form.date, { attr: { class: 'w-full border border-gray-300 rounded-md p-2 focus:ring focus:ring-indigo-200' } }) }}
            </div>

            <button type="submit"
                    class="w-full bg-rose-400 text-white py-2 rounded-md hover:bg-rose-500 transition">
                Add
            </button>

            {{ form_end(form) }}
        </div>

        <!-- Block 3 Recent Transactions block-->
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6 flex flex-col">
            <h2 class="text-xl font-semibold text-center text-gray-800 mb-4">Recently Added Transactions</h2>

            <div class="text-sm text-gray-600 mb-4">
                Showing last {{ recentTransactions|length }} transactions
            </div>

            <div class="overflow-y-auto">
                <table class="w-full border-collapse text-sm">
                    <thead>
                    <tr class="border-b border-gray-200 text-gray-600 text-center">
                        <th class="py-2">Type</th>
                        <th class="py-2">Category</th>
                        <th class="py-2">Amount</th>
                        <th class="py-2">Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for transaction in recentTransactions %}
                        <tr
                            class="border-t border-gray-100 text-center cursor-pointer hover:bg-gray-100 transition"
                            data-href="{{ path('transaction_show', { id: transaction.id }) }}"
                        >
                            <td class="py-2">
                                {% if transaction.mainType == 'income' %}
                                    <span class="px-2 py-1 rounded text-xs font-semibold bg-green-100 text-green-700">Income</span>
                                {% elseif transaction.mainType == 'expense' %}
                                    <span class="px-2 py-1 rounded text-xs font-semibold bg-red-100 text-red-700">Expense</span>
                                {% else %}
                                    <span class="px-2 py-1 rounded text-xs font-semibold bg-gray-200 text-gray-700">Not classified</span>
                                {% endif %}
                            </td>
                            <td class="py-2">{{ transaction.category }}</td>
                            <td class="py-2">{{ transaction.amount }} €</td>
                            <td class="py-2">{{ transaction.date|date('Y-m-d') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="py-4 text-center text-gray-500">No transactions yet.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Block 4 Data about incomes/expenses-->
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 w-full">

                <!-- Card 1: Total income -->
                <div class="border border-gray-200 rounded-lg px-4 py-3 flex flex-col items-center justify-center">
                    <p class="text-sm font-medium text-gray-600 text-center">
                        Income This Month
                    </p>
                    <p class="mt-1 text-2xl font-bold text-green-600 text-center">
                        {{ totalIncome|number_format(2, '.', ' ') }} €
                    </p>
                </div>

                <!-- Card 2: Total expenses -->
                <div class="border border-gray-200 rounded-lg px-4 py-3 flex flex-col items-center justify-center">
                    <p class="text-sm font-medium text-gray-600 text-center">
                        Expenses This Month
                    </p>
                    <p class="mt-1 text-2xl font-bold text-red-600 text-center">
                        {{ totalExpense|number_format(2, '.', ' ') }} €
                    </p>
                </div>

                <!-- Card 3: Balance -->
                <div class="border border-gray-200 rounded-lg px-4 py-3 flex flex-col items-center justify-center">
                    <p class="text-sm font-medium text-gray-600 text-center">
                        Balance This Month
                    </p>
                    <p class="mt-1 text-2xl font-bold text-gray-800 text-center">
                        {{ (totalIncome - totalExpense)|number_format(2, '.', ' ') }} €
                    </p>
                </div>

                <!-- Card 4: TBD -->
                <div class="border border-gray-200 rounded-lg px-4 py-3 flex flex-col items-center justify-center">
                    <p class="text-sm font-medium text-gray-600 text-center">
                        TBD
                    </p>
                    <p class="mt-1 text-2xl font-bold text-gray-800 text-center">
                    </p>
                </div>

            </div>
        </div>


        <!-- Block 5 TBD -->
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6 flex items-center justify-center">
            <span class="text-gray-500">Block 5</span>
        </div>

        <!-- Block 6 TBD -->
        <div class="bg-white border border-gray-200 rounded-lg shadow p-6 flex items-center justify-center">
            <span class="text-gray-500">Block 6</span>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // === Category enable/disable logic ===
            const mainTypeField = document.getElementById('transaction_mainType');
            const categoryField = document.getElementById('transaction_category');

            const categories = {
                income: [
                    {label: 'Salary', value: 'Salary'},
                    {label: 'Gift', value: 'Gift'},
                    {label: 'Invoice', value: 'Invoice'}
                ],
                expense: [
                    {label: 'Rent', value: 'Rent'},
                    {label: 'Groceries', value: 'Groceries'},
                    {label: 'Transport', value: 'Transport'}
                ]
            };

            categoryField.disabled = true;

            function updateCategoryOptions(selectedType) {
                categoryField.innerHTML = '';

                const placeholder = document.createElement('option');
                placeholder.disabled = true;
                placeholder.selected = true;
                placeholder.textContent = 'Choose category';
                categoryField.appendChild(placeholder);

                if (!selectedType) {
                    categoryField.disabled = true;
                    return;
                }

                categoryField.disabled = false;

                categories[selectedType]?.forEach(opt => {
                    const option = document.createElement('option');
                    option.value = opt.value;
                    option.textContent = opt.label;
                    categoryField.appendChild(option);
                });
            }

            mainTypeField.addEventListener('change', function () {
                updateCategoryOptions(this.value);
            });

            updateCategoryOptions(mainTypeField.value);
        });

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('tr[data-href]').forEach(row => {
                row.addEventListener('click', () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

{% endblock %}
